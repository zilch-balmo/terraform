[
    {
	"cpu": ${cpu},
	"environment": [
	    {
		"name": "BACKEND__POSTGRES__HOST",
		"value": "${database_host}"
	    },
	    {
		"name": "MICROCOSM_ENVIRONMENT",
		"value": ""
	    },
	    {
		"name": "MICRCOCOSM_CONFIG_VERSION",
		"value": "AWSCURRENT"
	    }
	],
	"essential": true,
	"image": "${image}",
	"memory": ${memory},
	"name": "backend",
	"portMappings": [
            {
		"containerPort": 80,
		"hostPort": 80
            }
	],
	"logConfiguration": {
	    "logDriver": "awslogs",
	    "options": {
		"awslogs-group": "${log_group}",
		"awslogs-region": "us-west-2",
		"awslogs-stream-prefix": "ecs"
	    }
	}
    }
]
